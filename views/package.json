{
  "name": "dungeon-dweller",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:gm": "rollup -c ./gameMasterView/rollup.config.js",
    "dev:gm": "rollup -w -c ./gameMasterView/rollup.config.js",
    "start:gm": "sirv ./gameMasterView/public --no-clear",
    "build:player": "rollup -c /playersView/rollup.config.js",
    "dev:player": "rollup -w -c /playersView/rollup.config.js",
    "start:player": "sirv ./gameMasterView/public --no-clear",
    "build": "concurrently \"rollup -c ./gameMasterView/rollup.config.js\" \"rollup -c ./playersView/rollup.config.js\"",
    "dev": "concurrently \"rollup -w -c ./gameMasterView/rollup.config.js\" \"rollup -w -c ./playersView/rollup.config.js\"",
    "start": "concurrently \"sirv ./gameMasterView/public --no-clear --port 5000\" \"sirv ./playersView/public --no-clear --port 5001\""
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "concurrently": "^6.2.0",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0"
  },
  "dependencies": {
    "carbon-icons-svelte": "^10.33.0",
    "sirv-cli": "^1.0.0"
  }
}
